<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <servlet>
        <servlet-name>Portada</servlet-name>
        <servlet-class>Controlador.Portada</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Estudiantes</servlet-name>
        <servlet-class>Controlador.Estudiantes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>Controlador.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profesor</servlet-name>
        <servlet-class>Controlador.Profesores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cursos</servlet-name>
        <servlet-class>Controlador.Cursos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Portada</servlet-name>
        <url-pattern>/Portada</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Estudiantes</servlet-name>
        <url-pattern>/Estudiantes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cursos</servlet-name>
        <url-pattern>/Cursos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profesor</servlet-name>
        <url-pattern>/Profesores</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
